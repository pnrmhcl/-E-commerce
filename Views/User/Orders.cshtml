@model List<Order>

<section id="cart_items">
    <div class="container">
        @if (!String.IsNullOrEmpty(ViewBag.Success))
        {
            <div class="alert alert-success">
                @ViewBag.Success
            </div>
        }
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Sipariş Kodu</td>
                        <td class="description">Sipariş Tarihi</td>
                        <td class="price">Ürün Adedi</td>
                        <td class="quantity">Toplam</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="cart_description">
                                <h4>@item.OrderCode</h4>
                            </td>
                            <td class="cart_description">
                                <h4>@item.OrderDate</h4>
                            </td>
                            <td class="cart_description">
                                <h4>@item.OrderItems.Count</h4>
                            </td>
                            <td class="cart_description">
                                <h4>@item.TotalPrice.ToString("##.##")₺</h4>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section> <!--/#cart_items-->


