@model ContactUsViewModel


<div id="contact-page" class="container">
    <div class="bg">
        <div class="row">
            <div class="col-sm-8">
                @if (ViewBag.Success != null && ViewBag.Success)
                {
                    <div class="alert alert-success" role="alert">
                        Mesajınız bize başarıyla ulaşmıştır. En kısa sürede tarafınıza dönüş yapılacaktır.
                    </div>
                }
                <div class="contact-form">
                    <h2 class="title text-center">Bize Mesaj Gönderin</h2>
                    <div class="status alert alert-success" style="display: none"></div>
                    <form asp-action="ContactUs" id="main-contact-form" class="contact-form row" name="contact-form" method="post">
                        <div class="form-group col-md-6">
                            <input type="text" asp-for="FullName" class="form-control" required="required" placeholder="İsim Soyisim">
                            <span class="text-danger" asp-validation-for="FullName"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <input type="email" asp-for="Email" class="form-control" required="required" placeholder="E-posta">
                            <span class="text-danger" asp-validation-for="Email"></span>

                        </div>
                        <div class="form-group col-md-12">
                            <input type="text" asp-for="Title" class="form-control" required="required" placeholder="Konu">
                            <span class="text-danger" asp-validation-for="Title"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <textarea asp-for="Message" id="message" required="required" class="form-control" rows="8" placeholder="Mesajınız"></textarea>
                            <span class="text-danger" asp-validation-for="Message"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <input type="submit" name="submit" class="btn btn-primary pull-right" value="Gönder">
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="contact-info">
                    <h2 class="title text-center">Contact Info</h2>
                    <address>
                        <p>Enstruman Shop</p>
                        <p>Beşyol, İnönü Cd. No:38, 34295 </p>
                        <p>Küçükçekmece/İstanbul</p>
                        <p>Email: aydin@edu.tr</p>
                    </address>
                    <div class="social-networks">
                        <h2 class="title text-center">Sosyal Hesaplarımız</h2>
                        <ul>
                            <li>
                                <a href="https://www.facebook.com/IAUKampus/" target="_blank"><i class="fa fa-facebook"></i></a>
                            </li>
                            <li>
                                <a href="https://twitter.com/iaukampus" target="_blank"><i class="fa fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="https://www.linkedin.com/school/istanbul-aydin-university/" target="_blank"><i class="fa fa-linkedin"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!--/#contact-page-->
