@model List<HomepageSlider>
<div class="main-header" style="margin-top: 0px;">
    <h4>Ana Sayfa Sliderlar</h4>
</div>
<div class="row">
    <div class="col-sm-12">
        <!-- Basic Table starts -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-header-text">Ana Sayfa Slider listesi</h5>
                <p>Ana Sayfa Sliderlarını düzenleyebilir ve silebilirsiniz.</p>
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-sm-12 table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Resim</th>
                                    <th>Buton Yazısı</th>
                                    <th>Yazı</th>
                                    <th>Buton Linki</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td><img  style="width:125px" src="@($"/images/home/{item.PicturePath}")" /></td>
                                    <td>@item.ButtonText</td>
                                    <td>@item.Text</td>
                                    <td>@item.ButtonLink</td>
                                    <td>
                                        <a class="btn btn-danger" asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
 
    </div>
</div>


