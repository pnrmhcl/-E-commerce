@model HomepageSlider
<div class="row">
    <div class="col-sm-12 p-0">
        <div class="main-header" style="margin-top: 0px;">
            <h4>Ürün Resmi Ekle</h4>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-header-text">Ekle</h5>
            </div>


            <div class="card-block">
                <form asp-action="Add" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="1" class="form-control-label">Resim Seç</label>
                        <input type="file" class="form-control" id="1" aria-describedby="emailHelp" name="file">
                    </div>
                    <div class="form-group">
                        <label for="2" class="form-control-label">Buton Yazısı</label>
                        <input type="text" class="form-control" id="2" aria-describedby="emailHelp" asp-for="ButtonText">
                    </div>
                    <div class="form-group">
                        <label for="3" class="form-control-label">Buton Linki</label>
                        <input type="text" class="form-control" id="3" aria-describedby="emailHelp" asp-for="ButtonLink">
                    </div>
                    <div class="form-group">
                        <label for="3" class="form-control-label">Yazı</label>
                        <input type="text" class="form-control" id="3" aria-describedby="emailHelp" asp-for="Text">
                    </div>


                    <button type="submit" class="btn btn-success waves-effect waves-light m-r-30">Ekle</button>
                </form>
            </div>
        </div>
    </div>

</div>