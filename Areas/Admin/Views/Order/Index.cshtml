@model List<Order>

<div class="main-header" style="margin-top: 0px;">
    <h4>Siparişler</h4>
</div>
<div class="row">
    <div class="col-sm-12">
        <!-- Basic Table starts -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-header-text">Siparişler listesi</h5>
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-sm-12 table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Sipariş Kodu</th>
                                    <th>Ürünler</th>
                                    <th>Fiyat</th>
                                    <th>Alıcı Ad Soyad</th>
                                    <th>Adres</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.OrderCode</td>
                                    <td>
                                        @foreach (var orderItem in item.OrderItems)
                                        {
                                            <span>@orderItem.Product.Name x @orderItem.Quantity</span> <br />
                                        }
                                    </td>
                                    <td>@item.TotalPrice.ToString("##.##")</td>
                                    <td>@item.User.FirstName @item.User.LastName</td>
                                    <td>@item.User.Address</td>
                                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


