@model ProductWithCategoriesModel

<div class="row">
    <div class="col-sm-12 p-0">
        <div class="main-header" style="margin-top: 0px;">
            <h4>Ürün Ekle</h4>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-header-text">Güncelle</h5>
            </div>


            <div class="card-block">
                <form asp-action="Add" method="post">
                    <div class="form-group">
                        <label for="1" class="form-control-label">Ürün Adı</label>
                        <input type="text" class="form-control" id="1" aria-describedby="emailHelp" placeholder="Ad Giriniz.." asp-for="Product.Name">
                        <span class="text-danger" asp-validation-for="Product.Name"></span>
                    </div>
                    <div class="form-group">
                        <label for="2" class="form-control-label">Açıklama</label>
                        <input type="text" class="form-control" id="2" aria-describedby="emailHelp" placeholder="Açıklama Giriniz.." asp-for="Product.Description">
                        <span class="text-danger" asp-validation-for="Product.Description"></span>
                    </div>
                    <div class="form-group">
                        <label for="3" class="form-control-label">Fiyat</label>
                        <input type="text" class="form-control" id="3" aria-describedby="emailHelp" placeholder="Fiyat Giriniz.." asp-for="Product.Price">
                        <span class="text-danger" asp-validation-for="Product.Price"></span>
                    </div>
                    <div class="form-group">
                        <label for="4" class="form-control-label">Stoktaki Adet</label>
                        <input type="number" class="form-control" id="4" aria-describedby="emailHelp" placeholder="Stok Adedi Giriniz.." asp-for="Product.UnitsInStock">
                        <span class="text-danger" asp-validation-for="Product.UnitsInStock"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleSelect1" class="form-control-label">Kategori</label>
                        <select class="form-control" name="categoryId" id="exampleSelect1">
                            @foreach (var item in Model.Categories)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-r-30">Ekle</button>
                </form>
            </div>
        </div>
    </div>

</div>