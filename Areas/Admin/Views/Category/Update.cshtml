@model Category

    <div class="row">
        <div class="col-sm-12 p-0">
            <div class="main-header" style="margin-top: 0px;">
                <h4>Kategori Güncelle : @Model.Name</h4>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-header-text">Güncelle</h5>
                </div>
              

                <div class="card-block">
                    <form asp-action="Update" method="post">
                        <input asp-for="Id" value="@Model.Id" type="hidden" />
                        <div class="form-group">
                            <label for="1" class="form-control-label">Ürün Adı</label>
                            <input type="text" class="form-control" id="1" aria-describedby="emailHelp" placeholder="Ad Giriniz.." asp-for="Name">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <button type="submit" class="btn btn-success waves-effect waves-light m-r-30">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
      
    </div>